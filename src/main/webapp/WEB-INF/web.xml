<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name> Model get all</display-name>
    <description> Minimal jsp example with rest architecture</description>

    <welcome-file-list>
        <welcome-file>jsp/hello.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>getModel</servlet-name>
        <servlet-class>wascoot.servlet.getModelServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getModel</servlet-name>
        <url-pattern>/model</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>wascoot.servlet.DashboardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>customer</servlet-name>
        <servlet-class>wascoot.servlet.CustomerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paymentMethod</servlet-name>
        <servlet-class>wascoot.servlet.PaymentMethodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paymentMethod</servlet-name>
        <url-pattern>/paymentMethod</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/wascoot</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>