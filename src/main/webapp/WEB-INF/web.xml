<?xml version="1.0" encoding="UTF-8"?>
<web-app id="hello-world-webapp" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>LOGIN EXAMPLE</display-name>
    <description>WebApp for SCOOT</description>
    <welcome-file-list>
        <welcome-file>html/login.html</welcome-file>
    </welcome-file-list>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>src.main.java.LoginAdmin.servlet.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/wascoot</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>